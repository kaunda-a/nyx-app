{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Nyx",
  "version": "1.1.0",
  "identifier": "com.nyx.admin",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Nyx Admin",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:8080 ws://localhost:8081 https://txrzdqqiofnszegjqgac.supabase.co; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/icon.svg"
    ],
    "publisher": "Nyx",
    "category": "Productivity",
    "shortDescription": "Nyx Admin Desktop Application",
    "longDescription": "A powerful admin interface for managing Nyx services and data.",
    "resources": [
      "../../server/dist/nyx-server.exe"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "en-US",
        "template": "main.wxs"
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "signingIdentity": "",
      "providerShortName": "",
      "entitlements": "entitlements.plist"
    },
    "linux": {
      "deb": {
        "depends": []
      }
    }
  }
}
